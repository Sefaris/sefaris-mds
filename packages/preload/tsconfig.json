{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@interfaces/*": ["../../interfaces/*"],
      "@utils/*": ["../../utils/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "../../types/**/*.d.ts",
    "../../tests/preload/configuration-service.spec.ts"
  ],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
